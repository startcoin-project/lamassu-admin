

.card

  .inner

    .top
      .main_title Wallet

    .mid.scroller
      .description
        .description_title Set your wallet settings
        .description_body Here you can change your current wallet settings. Please fill out all form fields.
      .settings        
        ul
          li
            .label Provider
            .select_wrap
              select#wallet_provider
                option(value="blockchain") Blockchain.info
          li
            .label GUID
            .input_wrap
              input#wallet_guid
          li
            .label Password
            .input_wrap
              input#wallet_password
          li
            .label From Address
            .input_wrap
              input#wallet_from_address

    .bot

